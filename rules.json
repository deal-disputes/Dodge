{
  "rules": {
    "users": {
       "$uid": {
         ".read": "$uid === auth.uid",
         ".write": "auth !== null && $uid === auth.uid && data.exists()"
       }
    },
    "admin-features": {
      ".read": "auth !== null && root.child('users').child(auth.uid).child('role').val() == 'Admin'",
      ".write": "auth !== null && root.child('users').child(auth.uid).child('role').val() == 'Admin'"
    },
    "forum-posts": {
      ".read": "auth !== null",
      "$uid": {
       ".read": "auth !== null",
       ".write": "$uid === auth.uid"
      }
    }
  }
}